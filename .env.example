# CodexAI Environment Configuration
# Copy this file to .env and configure with your values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Database Configuration (Required)
# Format: mysql://username:password@host:port/database_name
DATABASE_URL=mysql://codexappuser:Pak@12345pak@localhost:3306/codexapp

# JWT Secret for Authentication (Required - Change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production

# Application ID
VITE_APP_ID=codexai

# LLM Provider Configuration
# Options: "openai" or "forge"
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI provider)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Manus Forge Configuration (if using Forge provider - Optional)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# Storage Provider Configuration
# Options: "local" or "s3"
STORAGE_PROVIDER=local

# Local Storage Configuration (if using local storage)
LOCAL_STORAGE_PATH=./storage

# S3 Configuration (if using S3 storage - Optional)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Admin User Configuration (for seeding)
ADMIN_EMAIL=admin@codexai.local
ADMIN_PASSWORD=Admin123!
ADMIN_NAME=Administrator

# Optional: Manus OAuth (for backward compatibility)
OAUTH_SERVER_URL=
OWNER_OPEN_ID=
